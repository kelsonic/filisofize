<!-- Display a specific pondering -->

<div class="container">
  <div class="pondering">
    <div class="row">
    <%= @pondering.body %>
    </div>
    <div class="row">
      <div class="col l1">
      <!-- Form for upvote
      Not sure if the form action is correct with the upvote and the end of the link -->
      <form action="/ponderings/<%= pondering.id %>/upvote" method="post">
      <input type="submit" value="Upvote" name="Upvote"</input>
      </form>
      <p class="light-green-text"><%= @pondering.upvotes.size %></p>
      <!-- Form for downvote
      Again, may need to change form action -->
      <form action="/ponderings/<%= pondering.id %>/downvote" method="post">
      <input type="submit" value="Downvote" name="Downvote"</input>
      </form>
      <p class="light-red-text"> <%= @pondering.downvotes.size %></p>
      </div>
    </div>
  </div>

</div>
