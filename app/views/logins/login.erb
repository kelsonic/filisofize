<div class="row">
  <div class="col s12 center deep-purple-text">
    <h3>Login Here</h3>
  </div>
</div>

<div class="row">
  <div class="col s12 m8 offset-m2 center">
    <form action="/login" method='post'>

      <div class="input-field teal-text">
        <input placeholder="therefore_i_am" name="username" type="text" class="validate">
        <label for="username">Filosofer Username</label>
      </div>

      <div class="input-field teal-text">
        <input name="password" type="password" class="validate">
        <label for="password">Password</label>
      </div>

      <div class="input-field">
        <input class="btn waves-effect waves-light deep-purple" type="submit" value="Start Filosofizing"></input>
      </div>
    </form>
  </div>
</div>
