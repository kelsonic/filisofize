<div class="row">
  <div class="col s12 m8 offset-m2 center">
    <form action="/ponderings/<%= @pondering.id %>/theories" method="post">
      <div class="input-field col s12 teal-text">
        <textarea name="body" class="materialize-textarea"></textarea>
        <label for="body">Enter Your Theory!</label>
      </div>
      <div class = "row">
        <button class="btn waves-effect waves-light" type="submit" name="action">Theorize!
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>
</div>
