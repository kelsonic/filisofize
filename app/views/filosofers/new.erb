<div class="row center">
  <divclass="col s12 center teal-text">
    <h3>Sign Up</h3>
    <p><%= @errors %></p>
  </div>
</div>

<div class="row">
  <form class="col s12" action="/filosofers" method='post'>

    <div class="input-field col s6 offset-s3 teal-text">
      <input name="filosofer[first_name]" type="text" class="validate">
      <label for="first_name">First Name</label>
    </div>

    <div class="input-field col s6 offset-s3 teal-text">
      <input name="filosofer[last_name]" type="text" class="validate">
      <label for="last_name">Last Name</label>
    </div>

    <div class="input-field col s12 teal-text">
      <input name="filosofer[email]" type="email" class="validate">
      <label for="email" data-error="please enter a valid email address" data-success="Thanks">Email</label>
    </div>

    <div class="input-field col s12 teal-text">
      <input name="filosofer[username]" type="text" class="validate">
      <label for="username">Filosofer Username</label>
    </div>

    <div class="input-field col s12 teal-text">
      <input name="filosofer[password]" type="password" class="validate">
      <label for="password">Password</label>
    </div>

    <div class = "row center">
      <div class="col s12">
        <button class="btn waves-effect waves-light" type="submit" name="action">Create
          <i class="material-icons right">send</i>
        </button>
      </div>
    </div>

  </form>
</div>
